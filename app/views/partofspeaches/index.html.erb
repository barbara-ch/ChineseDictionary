<p id="notice"><%= notice %></p>

<h1>Lista części mowy</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Skrót</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @partofspeaches.each do |partofspeach| %>
      <tr>
        <td><%= partofspeach.name %></td>
        <td><%= partofspeach.short %></td>
        <% if user_signed_in? %>        
          <td><%= link_to '<i class="fa fa fa-eye" aria-hidden="true"></i>'.html_safe, partofspeach %></td>
          <td><%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_partofspeach_path(partofspeach) %></td>
          <td><%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, partofspeach, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="form-button">
  <%= link_to 'Nowa Część Mowy', new_partofspeach_path %>
</div>