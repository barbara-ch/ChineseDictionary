<%= form_for(@hanzi, :authenticity_token => true, remote: true) do |f| %>
  <% if @hanzi.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hanzi.errors.count, "error") %> prohibited this hanzi from being saved:</h2>

      <ul>
      <% @hanzi.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Znak Hanzi" %><br>
    <%= f.text_field :character %>
  </div><br>
  <div class="field">
    <%= f.label "Opis" %><br>
    <%= f.text_area :description %>
  </div><br>
  <div class="field">
    <%= f.label "Znak tradycyjny" %><br>
    <%= f.text_field :traditional %>
  </div><br>
  <div class="field">
    <%= f.label "Ilość kresek" %><br>
    <%= f.number_field :stroke, min: 0, max: 64  %>
  </div><br>
  <div class="carrier-wave-field">
    <%= f.label "Kolejność pisania kresek" %><br>
    <%= f.file_field :avatar  %>
  </div>
<!--   <div class="field">
    <%= f.label :remote_avatar_url, "or image URL" %><br />
    <%= f.text_field :remote_avatar_url %>
  </div> -->
  <div class="add-button">
    <%= f.submit "Dodaj" %>
  </div>
<% end %>
