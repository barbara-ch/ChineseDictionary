<p id="notice"><%= notice %></p>

<div class="form-button">
  <%= link_to 'Dodaj nowy Pinyin', new_pinyin_path %>
</div>

<h1>Lista Pinyinów</h1>

<table>
  <thead>
    <tr>
      <th>Sylaba</th>
      <th>Pisownia bez tonu</th>
      <th>Ton</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pinyins.each do |pinyin| %>
      <tr class="tone-<%= pinyin.tone %>">
        
        <td><%= pinyin.syllable %></td>
        <td><%= pinyin.alternative %></td>
        <td><%= pinyin.tone %></td>
        <% if user_signed_in? %>
          <td><%= link_to '<i class="fa fa fa-eye" aria-hidden="true"></i>'.html_safe, pinyin %></td>
          <td><%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_pinyin_path(pinyin) %></td>
          <td><%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, pinyin, method: :delete, data: { confirm: 'Czy na pewno chcesz usnunąć pinyin i wszystkie tłumaczenia go zawierające?' } %></td>
        <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="form-button">
  <%= link_to 'Dodaj nowy Pinyin', new_pinyin_path %>
</div>